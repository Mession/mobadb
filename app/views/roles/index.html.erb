<h1>Listing roles</h1>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
  </tr>
  </thead>

  <tbody>
  <% @roles.each do |role| %>
      <tr>
        <td><%= link_to role.name, role %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Role', new_role_path if current_user %>
