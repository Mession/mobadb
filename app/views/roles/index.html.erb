
<h1>Roles</h1>
<div class="row">
  <div class="col-md-4">
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
      </tr>
      </thead>

      <tbody>
      <% @roles.each do |role| %>
          <tr>
            <td><%= link_to role.name, role %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'New Role', new_role_path if current_user %>
