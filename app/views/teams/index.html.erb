<div class="row">
  <div class="col-md-5">
    <h1>Teams</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Year</th>
          <th>Location</th>
        </tr>
      </thead>

      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <td><%= link_to team.name, team %></td>
            <td><%= team.year %></td>
            <td><%= team.location %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to 'New Team', new_team_path if current_user %>
  </div>
</div>
